body {
  background-color: #fff;
}
.container
  width 80%
/// NAV
nav
  color #fff
  background-color #ee6e73 !important
  width 100%
  /*height: 112px;
  line-height: 56px;*/
    
nav
  ul
    li.active
      background-color #0f1f25
      a
        color #ffffff

#logo-container
  img
    height 36px
    margin 15px 0 0 0

nav ul a,
nav .brand-logo {
  color: #444;
}

p .space{
  line-height: 2rem;
}

.button-collapse {
  color: #26a69a;
}

.parallax-container {
  min-height: 380px;
  
  height: auto;
  color: rgba(255,255,255,.9);
}
.parallax-container .section {
  width: 100%;
}

/// BANNER

#index-banner 
  h1
  h2
  h3
  h4
  h5
  h6
    font-weight: 700 !important;

/// CONTACT
.contacto 
  .input-field
    position relative
    margin-top 0rem
    
/// FEATURES

.icon-box
  padding 10px
  border-radius 10px
  background #eaeaea
  width 80px
  height 80px
  margin 0 auto
  
/// CERTIFICADO

.cert:hover
  background-color #3b54ff
  color #fff

.cert:hover
  .icon-box
    background-color #fff

/*.cert-1:hover
  background-color #3b54ff

.cert-2:hover
  background-color #ff0080*/


/// BUTTONS

.action-button
  text-shadow 0 1px 3px #aaa
  background-color #8e24aa !important
  letter-spacing .15em

@media only screen and (max-width : 992px)
  .parallax-container
    .section
      top 40%
  
  #index-banner
    .section
      top 0

@media only screen and (max-width : 600px)
  #index-banner .section
    top 0
  #logo-container
    img
      height 36px
      margin 10px 0 0 0


.icon-block {
  padding: 0 15px;
}
.icon-block .material-icons {
  font-size: inherit;
}

footer.page-footer {
  margin: 0;
}